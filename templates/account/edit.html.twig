{% extends 'layout.html.twig' %}

{% block title %}
    Editace účtů uživatele - {{ employee.name }} {{ employee.surname }}
{% endblock %}

{% block banner %}
    <h1>Editace účtů</h1>
{% endblock %}

{% block breadcrumbs %}
    <li><a href="{{ path('index') }}">Vyhledávání</a></li>
    <li><a href="{{ path('employee_list') }}">Výsledek&nbsp;vyhledávání</a></li>
    <li><a href="{{ path('employee_detail',{"id":employee.id}) }}">Detail&nbsp;zaměstnance&nbsp;-&nbsp;{{ employee.name }}&nbsp;{{ employee.surname }}</a></li>
    <li><a href="{{ path('account_detail',{"employee_id":employee.id}) }}">Účty&nbsp;zaměstnance&nbsp;-&nbsp;{{ employee.name }}&nbsp;{{ employee.surname }}</a></li>
    <li id="current">Editace&nbsp;účtů</li>
{% endblock %}

{% form_theme form 'form/edit.html.twig' %}

{% block content %}
    {{ form_start(form) }}
    <h2>{{ employee.name }} {{ employee.surname }}</h2>

    <h3>Účet #{{ account.id }}</h3>

        <section>
            {{ form_row(form.password) }}
            {{ form_row(form.validity) }}
            {{ form_row(form.employee) }}
        </section>

    <footer>
    {% block form_end %}
            <a href="{{ path('account_detail',{"employee_id":employee.id}) }}">Zpět</a>
            <input id="save" type="submit" value="Aktualizovat">
        {{ form_end(form) }}
    {% endblock %}
    </footer>

{% endblock %}