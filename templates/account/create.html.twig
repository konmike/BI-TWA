{% extends 'layout.html.twig' %}

{% block title %}
    Nový účet
{% endblock %}

{% block banner %}
    <h1>Nový účet</h1>
{% endblock %}

{% block breadcrumbs %}
    <li><a href="{{ path('index') }}">Vyhledávání</a></li>
    <li><a href="{{ path('employee_list') }}">Výsledek&nbsp;vyhledávání</a></li>
    <li id="current">Nový účet</li>
{% endblock %}

{% form_theme form 'form/edit.html.twig' %}

{% block content %}
    {{ form_start(form) }}
    <h2>Nový účet</h2>
    <section>
        {{ form_row(form.email) }}
        {{ form_row(form.password) }}
        {{ form_row(form.validity) }}
        {{ form_row(form.employee) }}
    </section>


    <footer>
        {% block form_end %}
            <a href="{{ path('employee_list') }}">Zpět</a>
            <input id="save" type="submit" value="Vytvořit">
            {{ form_end(form) }}
        {% endblock %}
    </footer>

{% endblock %}