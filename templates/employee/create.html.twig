{% extends 'layout.html.twig' %}

{% block title %}
    Nový zaměstnanec
{% endblock %}

{% block banner %}
    <h1>Nový zaměstnanec</h1>
{% endblock %}

{% block breadcrumbs %}
    <li><a href="{{ path('index') }}">Vyhledávání</a></li>
    <li><a href="{{ path('employee_list') }}">Výsledek&nbsp;vyhledávání</a></li>
    <li id="current">Nový zaměstnanec</li>
{% endblock %}

{% form_theme form 'form/edit.html.twig' %}

{% block content %}
    {{ form_start(form) }}
    <h2>Nový zaměstnanec</h2>
    <section>
        <h3>Jméno, příjmení</h3>
        {{ form_row(form.name) }}
        {{ form_row(form.surname) }}
    </section>

    <section>
        <h3>Funkce</h3>
        {{ form_widget(form.functions) }}
    </section>

    <section>
        <h3>Kontaktní údaje</h3>
        {{ form_row(form.room) }}
        {{ form_row(form.phone) }}
        {{ form_row(form.email) }}
        {{ form_row(form.web) }}
    </section>

    <section>
        <h3>Doplňující informace</h3>
        {% block form_row %}
            <p class="form_description">
                {{ form_label(form.otherInfo) }}
                {{ form_errors(form.otherInfo) }}
                {{ form_widget(form.otherInfo) }}
                {{ form_help(form.otherInfo) }}
            </p>
        {% endblock %}
    </section>
    <footer>
        {% block form_end %}

            <a href="{{ path('employee_list') }}">Zpět</a>
            <input id="save" type="submit" value="Vytvořit">
            {{ form_end(form) }}

        {% endblock %}
    </footer>
{% endblock %}